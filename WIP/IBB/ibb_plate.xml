
<?xml version="1.0"?>
<CLBConfig version="2.0" output="output/IBB/">
  <Units>
    <Params size="1m" gauge="1"/>
    <!-- <Params nu="1.4e-5m2/s" gauge="0.0001"/> -->
  </Units>
	<Geometry nx="64" ny="64" nz="32">
      <CM><Box /></CM>    

		<IBB mask="ALL" name="border" >
			<STL file="WIP/Plate.stl" scale="1m" Xrot="-90d" x="32" y="32" z="10" side="surface"/>
		</IBB>

    <Wall mask="ALL" name="border" >

     	<STL file="WIP/Plate.stl" scale="1m" Xrot="-90d" x="32" y="32" z="10"/>

        <Box ny="1"/>
        <Box dy="-1"/>
<!--    <Box nx="1"/>
        <Box dx="-1"/> -->
    </Wall>

    <HeaterDirichletTemperature  name="dirichlet_hot"> 
      <STL file="WIP/Plate.stl" scale="1" Xrot="-90d" x="32" y="32" z="10"/>
      <!-- <Box dx="-2"/> -->
    </HeaterDirichletTemperature>

    <HeaterDirichletTemperature  name="dirichlet_cold"> 
        <Box nx="2"/>
    </HeaterDirichletTemperature>

	</Geometry>
    <Model>
	    <Params
	        k="0.16666666" 
	        cp="1.0"

	        InitTemperature="0.5"

	        InitTemperature-dirichlet_hot="1.0"
	        InitTemperature-dirichlet_cold="0.0"
	        />
	    <Params />
	    <Params GravitationX="-1.0E-05" />
	    <Params BoussinesqCoeff="1"/>
    </Model> 

<!-- <Solve Iterations="10" output="output/"> <VTK Iterations="1"/> </Solve> -->
<Failcheck Iterations="10000" nx="64" ny="64" nz="3" />
<!-- <TXT Iterations="50000" what="T,U"/> -->
<Log Iterations="50000"/>
<Solve Iterations="1000"> <VTK Iterations="100"/> </Solve>
<!-- <Solve Iterations="100000"> <VTK Iterations="1000"/> </Solve> -->
</CLBConfig>
