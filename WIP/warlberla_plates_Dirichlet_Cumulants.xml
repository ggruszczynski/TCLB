

<?xml version="1.0"?>
<CLBConfig version="2.0" output="output/walberla_plates_Dirichlet_Cumulants/">
    <Geometry nx="256" ny="128"  nz="3">
        <Cumulants>
            <Box/>
        </Cumulants>    
		<FluxMeasurment> <Box nx="1"/> </FluxMeasurment>
        <HeaterDirichletTemperatureEQ mask="COLLISION" name="dirichlet_hot">
		<Box ny="1" />
	</HeaterDirichletTemperatureEQ>
<HeaterDirichletTemperatureEQ mask="COLLISION" name="dirichlet_cold">
		<Box dy="-1" />
	</HeaterDirichletTemperatureEQ>


        <Wall mask="ALL">
            <Cylinder dx="50" dy="50" nx="28" ny="28" nz="3"/>
        </Wall>

<!--                 <HeaterDirichletTemperature  name="dirichlet_hot"> 
            <Cylinder dx="63" dy="63" nx="28" ny="28" nz="3"/>
        </HeaterDirichletTemperature>   -->

		<!-- <Wall mask="ALL" name="border" >
	        <Box ny="1"/>
	        <Box dy="-1"/>
	    </Wall> -->

    </Geometry>

    <Model>
        <Params
            InitTemperature="10.5"
            InitTemperature-dirichlet_hot="11"
            InitTemperature-dirichlet_cold="10"
            />
        <Params/>

        <Params
            nu="1.0"
            conductivity="1.0"

            h_stability_enhancement="1."
            cp="1"
            material_density="1"
            />
        <Params/>
	    <Params GravitationX="1.0e-05" />
	    <Params BoussinesqCoeff="1"/>
        <!-- gx = 2 * uc * (mu_l + mu_h) / ((rho_l + rho_h) * h * h) -->
        <!-- we set uc=0.01 - max velocity -->
    </Model>
<Failcheck Iterations="5000" nx="32" ny="127.000000" nz="3" />
<Solve Iterations="100"> <VTK Iterations="1"/> </Solve>
<Log Iterations="5000"/>

<Solve Iterations="1"> <VTK Iterations="1"/> </Solve>
