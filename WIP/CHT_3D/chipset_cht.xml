  </Units>
  <Geometry nx="1m" ny="1m" nz="1m">
    <CM><Box/></CM>    
    <!-- <Smoothing><Box /></Smoothing>  -->

    <Wall mask="ALL" name="border" >
<!--       <Box nx="1"/>
      <Box dx="-1"/> -->
      <Box ny="0.01m"/>
      <Box dy="-0.01m"/>
<!--       <Box nz="1"/>
      <Box dz="-1"/> -->
    </Wall>

  
    <DarcySolid name="darcy_solid_region">
      <STL file="example/data/chipset_radiator.stl" scale="0.01m" Xrot="-0d" x="0.55m" y="0.01m" z="0.5m"/>
    </DarcySolid>
    <None name="material_A_region">
      <STL file="example/data/chipset_radiator.stl" scale="0.01m" Xrot="-0d" x="0.55m" y="0.01m" z="0.5m"/>
    </None>   
    <HeaterDirichletTemperature  name="dirichlet_hot"> 
      <Box dx="0.4m" dz="0.4m" nz="0.2m" nx="0.2m" ny="0.025m"/>
    </HeaterDirichletTemperature>  
<!--         
<HeaterDirichletTemperature  name="dirichlet_hot"> 
