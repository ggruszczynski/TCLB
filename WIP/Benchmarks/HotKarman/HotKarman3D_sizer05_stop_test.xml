
<?xml version="1.0"?>
<CLBConfig version="2.0" output="output/batch_HotKarman3D_stop_test/">
    <Geometry nx="500" ny="75" nz="3" >  
        <CM_HIGHER><Box/></CM_HIGHER>
        <WVelocity><Inlet/></WVelocity>
        <!-- <EPressure><Outlet/></EPressure> -->
        <!-- <EConvect><Outlet/></EConvect> -->
        <ENeumann><Outlet/></ENeumann>

        <Wall mask="ALL">
            <!-- <Channel/> -->
            <Cylinder dx="142" dy="30" nx="15" ny="15" nz="3"/>
        </Wall>

        <HeaterDirichletTemperatureEQ mask="COLLISION" name="dirichlet_hot"> 
        	<Cylinder dx="142" dy="30" nx="15" ny="15" nz="3"/>
        </HeaterDirichletTemperatureEQ>  

        <MeasurmentArea>
            <Cylinder dx="142" dy="30" nx="15" ny="15" nz="3"/>
            <!-- <Outlet/> -->
        </MeasurmentArea>
    </Geometry>

    <Model>
        <Params
            InitTemperature="0"
            InitTemperature-dirichlet_hot="1"
            InitTemperature-dirichlet_cold="0"
            />
        <Params/>

        <Params
            nu="0.03"
            conductivity="0.003"
            conductivity_buffer="0.003"

            h_stability_enhancement="1."
            cp="1"
            material_density="1"
            />
        <Params/>
        <Params VelocityX="0.02" />
        <!-- <Params VelocityX="1.0E-02" /> -->
    </Model>

<Failcheck Iterations="10000" nx="500" ny="75" nz="3" />
<!-- <TXT Iterations="50000" what="T,U"/> -->
<Log Iterations="2000"/>
<!-- <Solve Iterations="2000000"> </Solve> -->
<Stop HeatSourceChange="1e-10" HeatFluxXChange="1e-10" Times="5" Iterations="5000"/>
<Solve Iterations="2000000"> <VTK Iterations="25000"/> </Solve>
</CLBConfig>

