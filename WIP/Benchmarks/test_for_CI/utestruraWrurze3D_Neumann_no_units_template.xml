<?R
    tab = expand.grid(sizer=c(2), k_material=c(1e-1), collision=c("CM_HIGHER", "Cumulants"))

    dir_name <- "batch_ruraWrurze_NeumannBC"
    dir.create(dir_name)

    tab$name = paste0("Dirichlet_Neumann_pipeInPipe",tab$collision,"_k_", tab$k_material, "_size_",32*tab$sizer, "lu")
    tab$xml = paste0(paste0(dir_name,"/",tab$name),".xml")
    tab$output = paste0(paste0("output/",dir_name,"/",tab$name,"/"))

    # tab$output = paste0(paste0("/net/scratch/people/plgmuaddieb/output/",dir_name,"/",tab$name,"/"))

    write.csv(tab, "ruraWrurze_Neumann_k_template.csv", row.names=FALSE)
    for (i in 1:nrow(tab)) {
        attach(tab[i,,drop=FALSE])
        print(xml)
        sink(xml) # save to a .xml file
?>

<!-- 
	W = kg⋅m2⋅s−3 
	J = kg⋅m2⋅s−2
-->
<?xml version="1.0"?>
<CLBConfig version="2.0" output="<?%s output ?>">
	<Geometry nx="<?%f 32*sizer ?>" ny="<?%f 32*sizer ?>" nz="3" >  
     	<HeaterDirichletTemperature mask="COLLISION" name="dirichlet_cold"> 
            <Box />
        </HeaterDirichletTemperature>

     	<<?%s collision ?>>
     		<Cylinder ny="<?%f 30*sizer ?>" nx="<?%f 30*sizer ?>" dx="<?%f 1*sizer ?>" dy="<?%f 1*sizer ?>"/>
     	</<?%s collision ?>>    

		<None mask="ADDITIONALS_HEAT">
			<Cylinder ny="<?%f 30*sizer ?>" nx="<?%f 30*sizer ?>" dx="<?%f 1*sizer ?>" dy="<?%f 1*sizer ?>"/>
		</None>

        <HeaterNeumannHeatFluxCylinder mask="COLLISION" name="neumann_hot"> 
        	<Cylinder ny="<?%f 8*sizer ?>" nx="<?%f 8*sizer ?>" dx="<?%f 12*sizer ?>" dy="<?%f 12*sizer ?>"/>
        </HeaterNeumannHeatFluxCylinder> 
	</Geometry>
    <Model>
	    <Params
	    	h_stability_enhancement="1."

	        conductivity="<?%f k_material ?>" 
	        cp="1"
			material_density="1"

	        InitTemperature="0.0"
	        InitHeatFlux-neumann_hot="0.1"
	        InitTemperature-dirichlet_cold="0.0"
	        />
	    <Params />
	    <Params CylinderCenterX="<?%f 16*sizer ?>"/>
	    <Params CylinderCenterY="<?%f 16*sizer ?>"/>
    </Model> 

<!-- <Solve Iterations="10" > <VTK Iterations="1"/> </Solve> -->
	<Failcheck Iterations="1000" nx="<?%f 32*sizer ?>" ny="<?%f 32*sizer ?>" nz="3" />
	<Log Iterations="1000" />
	<Solve Iterations="5000">
		<VTK Iterations="5000" />
	</Solve>
</CLBConfig>


<?R
    sink()
    detach()
}
?>
