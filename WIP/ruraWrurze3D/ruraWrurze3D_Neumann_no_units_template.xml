<?xml version="1.0"?>
<CLBConfig version="2.0" output="<?%s output ?>">
	<Units>
    <Params size="1m" gauge="<?%f sizer ?>"/>
<!--     
    <Params conductivity="1.0W/m/K" gauge="1E-0"/> 
	<Params cp="1.0J/kg/K" gauge="1E-0"/>
	<Params	material_density="1.0kg/m3" gauge="1E-0"/> -->
  </Units>
	<Geometry nx="32m" ny="32m" nz="3" >  
     	<HeaterDirichletTemperature mask="COLLISION" name="dirichlet_cold"> 
            <Box />
        </HeaterDirichletTemperature>

     	<CM>
     		<Cylinder ny="120" nx="120" dx="4" dy="4"/>
     	</CM>    

		<None mask="ADDITIONALS_HEAT">
			<Cylinder ny="30m" nx="30m" dx="1m" dy="1m"/>
		</None>

        <HeaterNeumannHeatFlux mask="COLLISION" name="neumann_hot"> 
        	<Cylinder ny="8m" nx="8m" dx="12m" dy="12m"/>
        </HeaterNeumannHeatFlux> 

<!--       	<DarcySolid name="darcy_solid_region">
        	<Cylinder ny="20m" nx="20m" dx="6m" dy="6m"/>
      	</DarcySolid>   -->
	</Geometry>
    <Model>
	    <Params
	    	h_stability_enhancement="1."

	        conductivity="<?%f k_material ?>" 
	        cp="1"
			material_density="1"

	        InitTemperature="0.0"
	        InitHeatFlux-neumann_hot="1.0"
	        InitTemperature-dirichlet_cold="0.0"
	        />
	    <Params />
	    <Params CylinderCenterX="16m"/>
	    <Params CylinderCenterY="16m"/>
