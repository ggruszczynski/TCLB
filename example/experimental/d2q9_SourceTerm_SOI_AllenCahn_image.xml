<?xml version="1.0"?>
<CLBConfig version="2.0" output="output/allen_cahn_image/">
	<!-- <Geometry nx="32" ny="32"> -->
	<!-- <Geometry nx="128" ny="128"> -->
		<!-- <Geometry nx="256" ny="256"> -->
	<!-- <Geometry nx="512" ny="512"> -->
	<Geometry nx="512" ny="512">
		<MRT_SOI><Box/></MRT_SOI>
		<Smoothing><Box/></Smoothing>


        <ImageReader> 
      		<!-- <ImageBMP file="example/experimental/smile_32x32.bmp" /> -->
      		<!-- <ImageBMP file="example/experimental/input_128x128.bmp" /> -->
      		<!-- <ImageBMP file="example/experimental/input_256x256.bmp" min_range="1" max_range="100"/> -->
      		<ImageBMP file="example/experimental/input_512x512.bmp" min_range="0.1" max_range="1." />
      		<!-- <ImageBMP file="example/experimental/input_1024x1024.bmp" min_range="1" max_range="100"/> -->
        </ImageReader> 

		<None name="epicenter">
			<Box dx="80" dy="120" nx="10" ny="10"/>
		</None>


	</Geometry>
	<Model>
		<Param name="diffusivity_phi" value="0.01666"/>
		<Param name="lambda" value="1"/>

		<Param name="Init_PhaseField" value="0.25" />	
		<Param name="Init_PhaseField" zone="epicenter" value="0.95"/>		

		<Param name="phase_field_smoothing_coeff" value="0.1"/>
    </Model>

	<Solve Iterations="100"><VTK Iterations="10"/></Solve>	<!-- Smoothing the population -->
	<Geometry><None mask="ADDITIONALS"><Box nx="512" ny="512"/></None></Geometry>
	<Solve Iterations="10000"><VTK Iterations="1000"/></Solve>
</CLBConfig>
