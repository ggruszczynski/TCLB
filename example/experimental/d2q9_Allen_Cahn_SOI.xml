<?xml version="1.0"?>
<CLBConfig version="2.0" output="output/allen_cahn/">
	<Geometry nx="512" ny="512">
		<!-- <SRT_SOI_DF><Box/></SRT_SOI_DF> -->
		<!-- <SRT_SOI><Box/></SRT_SOI>	 -->
		<TRT_SOI><Box/></TRT_SOI>
		<Smoothing><Box/></Smoothing>

		<None name="city">
			<!-- <Sphere dx="40" dy="40" nx="150" ny="150"/> -->
			<Box dx="0" dy="0" nx="50" ny="50"/>
			<Box dx="0" dy="60" nx="50" ny="50"/>
			<Box dx="60" dy="0" nx="50" ny="50"/>
			<Box dx="120" dy="0" nx="50" ny="50"/>
			<Box dx="0" dy="120" nx="50" ny="50"/>
			<Box dx="200" dy="200" nx="50" ny="50"/>

		</None>

		<None name="desert">
			<!-- <Sphere dx="300" dy="340" nx="100" ny="100"/> -->
			<Box dx="300" dy="340" nx="100" ny="100"/>
		</None>
	</Geometry>
	<Model>
		<Param name="diffusivity_phi" value="0.1666"/>
		<Param name="magic_parameter" value="0.1666"/>
		
		<Param name="lambda" value="1."/>

		<Param name="Init_PhaseField" value="0.0" />	
		<!-- <Param name="Init_PhaseField" zone="city" value="1." />
		<Param name="Init_PhaseField" zone="desert" value="-1." /> -->
		<Param name="Init_From_PhaseField_External" value="1" />

		<Param name="phase_field_smoothing_coeff" value="0.1"/>
    </Model>
	<RunR>
		x = Solver$Geometry$X
		x = x / max(max(x)) * 2 * pi
		y = Solver$Geometry$Y		
		Solver$Fields$Init_PhaseField_External[] = sin(x)	
		Solver$Actions$InitFromFields() 
	</RunR>
	<!-- Smoothing the population -->
	<VTK/>

</CLBConfig>
