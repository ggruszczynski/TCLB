<?xml version="1.0"?>
<CLBConfig version="2.0" output="output/lem_image/">
	<Geometry nx="32" ny="32">
		<MRT><Box/></MRT>
		<Smoothing><Box/></Smoothing>
		<None name="epicenter">
			<Box nx="10" ny="10"/>
			<Box dx="80" dy="120" nx="10" ny="10"/>
			<Box dx="40" dy="20" nx="10" ny="10"/>
			<Box dx="10" dy="190" nx="10" ny="10"/>

		</None>
		<None name="city">
			<!-- <Sphere dx="40" dy="40" nx="50" ny="50"/> -->
			<Box dx="40" dy="40" nx="50" ny="50"/>
		</None>
		<None name="desert">
			<!-- <Sphere dx="100" dy="140" nx="50" ny="50"/> -->
			<Box dx="100" dy="140" nx="50" ny="50"/>
		</None>

        <ImageReader name="BC_heat_cylinder"> 
      		<ImageBMP file="example/experimental/smile_32x32.bmp" />
        </ImageReader > 

	</Geometry>
	<Model>
		<Params diffusivity="0.1666"/>
		<Params sir_beta="0.1"/><!-- s2i constant ->  infection rate -->
		<Params sir_gamma="0.01"/><!-- i2r constant -> 1/gamma is the mean infective period -->
		<Params stability_enhancement="0.1"/>

		<Params Init_S_Fraction="1" />		
		<Params Init_I_Fraction="0" />
		<Params Init_R_Fraction="0" />

		<Params Init_S_Fraction-epicenter="0.97" />		
		<Params Init_I_Fraction-epicenter="0.03" />

		<Params Init_PopulationDensity="50" />
		<Params Init_PopulationDensity-city="100" />
		<Params Init_PopulationDensity-desert="10" />

		<Param name="population_smoothing" value="0.1"/>
<!-- 		<Params Init_PopulationDensity="2" />
		<Params Init_PopulationDensity-city="3" />
		<Params Init_PopulationDensity-desert="1" /> -->
    </Model>

	<Solve Iterations="500"><VTK Iterations="100"/></Solve>	<!-- Smoothing the population -->
	<Geometry><None mask="ADDITIONALS"><Box nx="32" ny="32"/></None></Geometry>
	<Solve Iterations="3000"><VTK Iterations="10"/></Solve>
</CLBConfig>

