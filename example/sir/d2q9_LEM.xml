<?xml version="1.0"?>
<CLBConfig version="2.0" output="output/">
	<Geometry nx="200" ny="200">
		<MRT>
			<Box/>
		</MRT>

		<None name="epicenter">
			<Box nx="10" ny="10"/>
			<Box dx="80" dy="120" nx="10" ny="10"/>
			<Box dx="40" dy="20" nx="10" ny="10"/>
			<Box dx="10" dy="190" nx="10" ny="10"/>

		</None>
		<None name="city">
			<Sphere dx="40" dy="40" nx="50" ny="50"/>
		</None>
	</Geometry>
	<Model>
		<Params h_to_i="0.5"/>
		<Params i_to_r="0.02"/>
		<Params Population="10" />
		<Params InfectedProb="0" />
		<Params InfectedProb-epicenter="0.01" />
		<Params Population-city="100" />

    </Model>
    <VTK/>

	<VTK Iterations="1" what="Healthy,Infected,Recovered"/>
	<Solve Iterations="200"/>
</CLBConfig>
